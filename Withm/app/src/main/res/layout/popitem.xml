<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="20dp"
    android:background="@color/black"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/close"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="请选择分享平台"
            android:textColor="@color/c_636363"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/weibo"
            android:layout_toRightOf="@+id/weibo"
            android:src="@mipmap/close" />

        <ImageView
            android:id="@+id/wechat"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/te"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="28dp"
            android:src="@mipmap/icon_me_fenxiang_wechat" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/wechat"
            android:layout_alignRight="@+id/wechat"
            android:layout_below="@+id/wechat"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:text="微信"
            android:textColor="@color/gary"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pyq"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/wechat"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_me_fenxiang_pengyouquan" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:text="微信朋友圈"
            android:textColor="@color/gary"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/pyq"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:src="@mipmap/icon_weibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/weibo"
            android:layout_alignStart="@+id/weibo"
            android:text="新浪微博"
            android:textColor="@color/gary"
            android:textSize="15dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>