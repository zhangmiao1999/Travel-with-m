<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.withm.ui.login.SendVeriActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_white"/>
    <TextView
        android:id="@+id/recode"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_20"
        android:text="重新发送（56s）"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/c_999999"
        android:textSize="@dimen/sp_14"/>
    <TextView
        android:id="@+id/please_in"
        android:layout_marginTop="@dimen/dp_104"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="@string/incode"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_38"
        android:textColor="#FF373737"
        android:textSize="@dimen/sp_28"/>
    
    <com.example.withm.widget.VerificationCodeView
        android:id="@+id/verificationcodeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_83"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/please_in"
        app:vcv_et_bg="@drawable/et_login_code"
        app:vcv_et_cursor="@drawable/et_cursor"
        app:vcv_et_inputType="number"
        app:vcv_et_number="4"
        app:vcv_et_text_color="@android:color/black"
        app:vcv_et_text_size="6sp"/>

</RelativeLayout>
